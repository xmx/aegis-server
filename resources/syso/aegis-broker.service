[Unit]
Description=Aegis Broker Service
After=network.target

[Service]
Type=simple
User=root
Group=root
LimitNOFILE=65535
WorkingDirectory=/opt/aegis/broker
ExecStart=/opt/aegis/broker/aegis-broker
ExecStop=/bin/kill -TERM $MAINPID
Restart=always
RestartSec=5
Environment=TERM=xterm-256color

[Install]
WantedBy=multi-user.target
