[Unit]
Description=Aegis Server Service
After=network.target

[Service]
Type=simple
User=root
Group=root
LimitNOFILE=65535
WorkingDirectory=/opt/aegis/server
ExecStart=/opt/aegis/server/aegis-server
ExecStop=/bin/kill -INT $MAINPID
Restart=always
RestartSec=5
LimitCORE=infinity
Environment=GOTRACEBACK=crash
Environment=TERM=xterm-256color

[Install]
WantedBy=multi-user.target
